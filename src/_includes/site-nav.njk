<nav class="flex items-center">
    {%- for link in metadata.navLinks -%}
        <a
          class="relative inline-block px-1 font-sans font-semi text-xl mx-2 md:mx-3 lowercase group"
          href="{{ link.path }}">
          {{ link.text }}
          <span
            {% if page.url == link.path %} class="z-10 absolute inset-x-0 bottom-0 mb-1 h-1 bg-rust inline-block">
            {% else %} class="hidden group-hover:block text-rust absolute right-0 -mr-2 -mt-1 top-0 font-serif font-bold text-3xl">?{% endif %}
          </span>
        </a>
    {% endfor %}
</nav>
